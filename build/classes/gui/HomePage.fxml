            <VBox prefHeight="200.0" prefWidth="350.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Vous pouvez essayer et tester comment envoyer un colis et voir nos tarifs avec nos partenaires multiples." wrappingWidth="300.0">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
               </children>
               <padding>
                  <Insets left="25.0" right="25.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0" spacing="30.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Visualiser un devis">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Text>
                  <Button fx:id="visualiser_button" mnemonicParsing="false" onAction="#openVisualiserDevis" text="Visualiser">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </HBox>
