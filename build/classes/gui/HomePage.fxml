      <HBox layoutX="-1.0" layoutY="-2.0" prefHeight="100.0" prefWidth="1080.0" spacing="600.0" style="-fx-background-color: #7B829F;" AnchorPane.leftAnchor="0.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/logo.png" />
               </image>
            </ImageView>
            <Button fx:id="login_button" minWidth="150.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="150.0" text="LOGIN">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
         </padding>
      </HBox>
      <VBox alignment="CENTER" layoutX="223.0" layoutY="170.0" prefHeight="200.0" prefWidth="700.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tracker Votre Colis">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <TextField fx:id="tracking_input" minWidth="500.0" promptText="Enter your tracking number">
